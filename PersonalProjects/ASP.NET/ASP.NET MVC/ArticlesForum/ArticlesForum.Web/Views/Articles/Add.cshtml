@model ArticlesForum.Web.Models.Articles.AddArticleViewModel

@{
    ViewBag.Title = "Add Article";
}

<h2>Add</h2>

@using (Html.BeginForm("Add", "Articles", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.EditorFor(m => m.CategoryId, "DropDownList", new { ListItem = Model.Categories })

    @Html.EditorFor(m => m.Title)

    @Html.EditorFor(m => m.Content)

    <div class="row">
        <div class="col-md-2">
            <strong>Image</strong>
        </div>
        <div class="col-md-3">
            <input type="file" name="UploadedImage" />
        </div>
    </div>
    <br />
    <div class="row">
    </div>
    <div class="row">
        <div class="col-md-5 col-md-offset-2">
            <input type="submit" class="btn btn-default" />
        </div>
    </div>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}