@using ArticlesForum.Web.Models.Articles
@{
    ViewBag.Title = "All";
}

<h2>All</h2>

<div class="container">
    <div class="row k-header">
        <div class="col-md-3 text-center">
            <h3>Title</h3>
        </div>
        <div class="col-md-3 text-center">
            <h3>Category</h3>
        </div>
        <div class="col-md-3 text-center">
            <h3>Author</h3>
        </div>
    </div>
</div>

@(Html.Kendo().ListView<ListArticleModel>()
    .Name("all-articles")
    .TagName("div")
    .Pageable()
    .ClientTemplateId("all-articles-template")
    .DataSource(dataSource =>
    {
        dataSource
            .ServerOperation(true)
            .PageSize(5)
            .Read(read => read.Action("ReadArticles", "Articles"));        
    }))

<script id="all-articles-template" type="text/x-kendo-tmpl">
    <div class="row">
        <div class="col-md-1">
            #= Id #
        </div>        
        <div class="col-md-3">
            <a href="/Articles/Details/#= Id #">#= ArticleTitle #</a>
        </div>
        <div class="col-md-3">
            #= CategoryName #
        </div>
        <div class="col-md-3">
            #= AuthorUserName #
        </div>
    </div>
</script>