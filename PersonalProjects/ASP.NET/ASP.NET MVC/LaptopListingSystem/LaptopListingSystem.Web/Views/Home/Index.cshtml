@model IEnumerable<LaptopListingSystem.Web.Models.Home.LaptopViewModels>

@{
    ViewBag.Title = "Home Page";
}


<div class="container">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var laptop = Model.ElementAt(i);

        <div class="row">
            <div class="col-md-3">

                <h2>@laptop.Manufacturer @laptop.Model</h2>
                <img src="@laptop.Image" />
                <p>
                    <a class="btn" href="@Url.Action("Details", "Laptops", new { laptop.Id })">Details</a>
                </p>
                
            </div>
        </div>
    }
</div>

